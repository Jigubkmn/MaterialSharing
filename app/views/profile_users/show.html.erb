<div class="flex flex-row w-full">
  <%= render 'profile/side_bar' %>
  <div class="flex flex-col">
    <h3 class="mt-50px text-28px font-bold"><%= t('.title') %></h3>
    <div class="min-w-700px mt-15px border-2 border-gray rounded-md ">
      <div class="mt-30px mb-30px ml-50px flex items-center ">
        <div class="flex justify-start items-center">
          <div><%= link_to image_tag(current_user.image_url, class:"h-20 w-20 rounded-full"), '#' %></div>
          <div class="text-28px ml-50px"><%= current_user.name %></div>
        </div>
        <div class="flex items-center ml-auto mr-50px">
          <%= link_to edit_profile_user_path, class: 'flex justify-center items-center bg-thin-orange hover:bg-pale-orange h-9 w-9 rounded-full' do %>
            <i class="fa-sharp fa-solid fa-pencil fa-lg"></i>
          <% end %>
        </div>
      </div>
      <div class="border-y-2 border-gray mx-30px py-30px">
        <div class="text-base ml-20px mb-5px font-bold"><%= t('.email') %></div>
        <div class="text-base ml-20px"><%= current_user.email %></div>
      </div>
      <div class="mx-30px py-30px">
        <div class="text-base ml-20px mb-5px font-bold"><%= t('.introduction') %></div>
          <div class="text-base ml-20px">
            <%= current_user.introduction.present? ? current_user.introduction : "未記入" %>
          </div>
      </div>
    </div>
  </div>
</div>

