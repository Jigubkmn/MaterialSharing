<div class="min-h-screen flex justify-center">
  <div class="w-full max-w-md">
    <h2 class="text-3xl my-30px text-center font-bold"><%= t('.title') %></h2>
    <%= form_with model: @user, url: login_path, local: true do |f| %>
      <div class= "mb-20px flex flex-col " >
        <%= f.label :email, class: "font-bold" %>
        <%= f.email_field :email, class: "input input-bordered input-warning input-sm w-full m-0 py-0 pr-0 pl-4" %>
      </div>
      <div class= "mb-20px flex flex-col " >
        <%= f.label :password, class: "font-bold" %>
        <%= f.password_field :password, class: "input input-bordered input-warning input-sm w-full m-0 py-0 pr-0 pl-4" %>
      </div>
      <div class="flex justify-center mb-20px">
      <%= f.submit t('helpers.submit.login'), class: "btn bg-pale-blue hover:bg-dark-blue w-full max-w-200px text-xl text-white" %>
      </div>
    <% end %>
    <div class="flex justify-center mb-20px">
      <%= link_to t('.to_register_page'), new_user_path, class: "text-lg text-dark-green underline underline-offset-4 " %>
    </div>
  </div>
</div>